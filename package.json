{
  "name": "bloglist",
  "version": "1.0.0",
  "description": "Fullstackopen part 7 project",
  "main": "server/index.js",
  "scripts": {
    "start": "node server",
    "build": "cd ./react-ui/ && npm install && npm run build",
    "dev": "NODE_ENV=development nodemon index.js",
    "test": "NODE_ENV=test jest --runInBand --forceExit",
    "lint": "eslint .",
    "build:ui": "cd ./react-ui && rm -rf build && npm run build",
    "deploy": "git push heroku master",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "start:test": "NODE_ENV=test node index.js",
    "clearout": "rm -rf node_modules && npm install && cd ./react-ui && rm -rf node_modules && npm install"
  },
  "engines": {
    "node": "v18.9.0",
    "npm": "8.19.1"
  },
  "author": "P Moore",
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.3.4"
  },
  "devDependencies": {
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^26.2.2",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.2",
    "nodemon": "^2.0.16",
    "prettier": "2.6.2",
    "supertest": "^6.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chmonster/fullstackopen7a.git"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  }
}
